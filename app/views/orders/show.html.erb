<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order <%= @order.email %>!
    </h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
  <%= link_to "View Email Receipt", "http://localhost:3000/rails/mailers/jungle_mailer/receipt_email", class: 'btn btn-lg btn-primary' %>


<h2>Order Details:</h2>

<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order.line_items.each do |p| %>
          <%= render 'item', product_id: p[:product_id], quantity: p[:quantity] %>
    <%end%>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents/100.00 %>
          </th>
        </tr>
      </tfoot>

    </table>
  </div>
</section>
